$sortedTests = $ReportData.TestResults.GetEnumerator() | Sort-Object {
    switch ($_.Value.Status) {
        "FAIL" { 0 }
        "WARN" { 1 }
        default { 2 }
    }
}
foreach ($test in $sortedTests) {
    $badgeClass = switch ($test.Value.Status) {
        "PASS" { "pass-badge" }
        "WARN" { "warn-badge" }
        "FAIL" { "fail-badge" }
        "INFO" { "info-badge" }
    }
    $HTML += @"
