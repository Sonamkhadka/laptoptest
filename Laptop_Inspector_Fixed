    if ($wearNum -lt 40) {
        $HTML += " (Good condition)"
    } elseif ($wearNum -lt 60) {
        $HTML += " (Fair condition)"
    }
}
$HTML += @"
</li>
                    <li><strong>Hardware:</strong> "@
if ($ReportData.PnpIssues.Count -eq 0) {
