$hasWiFiAdapter = $ReportData.NetworkInfo | Where-Object {$_.Type -eq "WiFi"}
$hasEthernetAdapter = $ReportData.NetworkInfo | Where-Object {$_.Name -match "Ethernet"}
if ($hasWiFiAdapter) {
