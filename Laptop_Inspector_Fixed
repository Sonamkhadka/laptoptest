$recommendation = switch ($ReportData.OverallScore) {
    { $_ -ge 85 } { "‚úÖ RECOMMENDED - Excellent condition" }
    { $_ -ge 70 } { "üëç GOOD CHOICE - Minor issues only" }
    { $_ -ge 55 } { "‚ö†Ô∏è  PROCEED WITH CAUTION - Several concerns" }
    default { "‚ùå NOT RECOMMENDED - Major issues detected" }
}
Write-Host "`nüõí PURCHASE RECOMMENDATION:" -ForegroundColor Cyan
